);


DROP TABLE IF EXISTS os_groups_notices;

CREATE TABLE os_groups_notices (
  "GroupID" uuid NOT NULL,
  "NoticeID" uuid NOT NULL,
  "TMStamp" integer NOT NULL DEFAULT '0',
